<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_path('event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <%# Для перевода времени в русский формат используем I18n %>
            <%# Формат при этом используется из гема russian %>
            <h3><%= l @event.datetime, format: :short %></h3>

            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-both">
              <%= link_to t('buttons.change'), edit_event_path(@event), class: 'btn btn-primary' %>
            </div>
            <div class="my-2 col-6 text-end">
              <%= link_to t('buttons.event_delete'), event_path(@event), class: 'btn btn-danger',
                          method: :delete, data: {confirm: t('buttons.are_you_sure')} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
