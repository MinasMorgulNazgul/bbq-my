<h2>Вход в профиль</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control shadow-sm' %>
  </div>

  <div class="mb-3">
    <%= f.label 'Пароль', class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control shadow-sm' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="d-grid gap-2 mb-2">
    <%= f.submit "Войти", class: 'btn btn-primary rounded-pill shadow-sm' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
